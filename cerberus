# MAIN FUNCTIONS
################################################################################

# Start Cerberus
start_cerberus() {
    print_banner
    
    # Check if already running
    if [[ -f "$LOCK_FILE" ]]; then
        print_status "warning" "Cerberus is already running!"
        exit 1
    fi
    
    # Create lock file
    touch "$LOCK_FILE"
    echo $$ > "$PID_FILE"
    
    print_status "loading" "Initializing Cerberus..."
    
    # Get current IP
    get_current_ip
    print_status "info" "Current IP: $CURRENT_IP"
    
    # Create directories
    create_directories
    
    # Check requirements
    check_requirements
    
    # Setup configurations
    setup_tor_config
    
    # Randomize MAC addresses
    randomize_mac
    
    # Setup DNS
    setup_dns
    
    # Apply system hardening
    system_hardening
    
    # Start Tor service with better error handling
    print_status "loading" "Starting Tor service..."
    
    # Make sure tor service is stopped first
    systemctl stop tor 2>/dev/null
    
    # Wait a moment
    sleep 2
    
    # Start tor service
    if systemctl start tor; then
        print_status "success" "Tor service started successfully"
        # Wait longer for Tor to initialize
        sleep 15
        
        # Setup iptables after Tor is running
        setup_iptables
        
        # Get new IP address through Tor
        get_tor_ip
        
        # Verify Tor connection
        if check_tor_connection; then
            echo ""
            echo -e "${GREEN}${BOLD}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${RESET}"
            echo -e "${GREEN}${BOLD}â•‘                         ğŸ›¡ï¸  LOCKDOWN SUCCESSFUL ğŸ›¡ï¸                         â•‘${RESET}"
